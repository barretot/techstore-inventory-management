{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Add Product Lambda",
      "program": "${workspaceFolder}/node_modules/.bin/sls",
      "args": [
        "invoke",
        "local",
        "-f",
        "addProductInfos",
        "--path",
        "${workspaceFolder}/src/payloads/addProduct.json"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Update Product Lambda",
      "program": "${workspaceFolder}/node_modules/.bin/sls",
      "args": [
        "invoke",
        "local",
        "-f",
        "updateProductInfos",
        "--path",
        "${workspaceFolder}/src/payloads/updateProduct.json"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Search Product Lambda",
      "program": "${workspaceFolder}/node_modules/.bin/sls",
      "args": [
        "invoke",
        "local",
        "-f",
        "searchProductInfos",
        "--path",
        "${workspaceFolder}/src/payloads/getProduct.json"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Search All Products Lambda",
      "program": "${workspaceFolder}/node_modules/.bin/sls",
      "args": [
        "invoke",
        "local",
        "-f",
        "searchAllProductsInfos",
        "--path",
        "${workspaceFolder}/src/payloads/getAllProduct.json"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Verify Token",
      "program": "${workspaceFolder}/node_modules/.bin/sls",
      "args": [
        "invoke",
        "local",
        "-f",
        "verifyToken",
        "--path",
        "${workspaceFolder}/src/payloads/verifyToken.json"
      ]
    }
  ]
}